general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

// order += "ipv6"
order += "memory"
order += "disk /"
order += "disk /mnt/nvme0n1p8/me"
// order += "run_watch DHCP"
// order += "run_watch VPNC"
// order += "path_exists VPN"
order += "ethernet enp0s13f0u3u1"
order += "wireless wlp0s20f3"
// order += "cpu_temperature 0"
// order += "load"
// order += "tztime local"
order += "battery 0"
// order += "tztime dublin"
order += "time"



wireless wlp0s20f3 {
        format_up = "ï‡«    %essid :: %bitrate :: %ip"
        format_down = "ï‡«    "
}

ethernet enp0s13f0u3u1 {
        format_up = "ï›¿    %bitrate :: %ip"
        format_down = "ï›¿  :: none"
}

battery 0 {
        // format = "ï‰€      %percentage %remaining"
        format = "ï‰€    %percentage"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

time {
        format = "%H:%M  "
}

tztime dublin {
        format = "%H:%M  "
        timezone = "Europe/Dublin"
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "ï”¸  %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "/: %free"
}

disk "/mnt/nvme0n1p8/me" {
        format = "~: %free"
}

read_file uptime {
        path = "/proc/uptime"
}